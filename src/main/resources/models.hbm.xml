<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="trainSimulator.models">
    <class name="EventLog" table="event_register">
        <id name="id" column="event_log_id">
            <generator class="native"/>
        </id>
        <property name="type" column="type"/>
        <property name="timestamp" column="timestamp"/>
        <property name="stationName" column="station_name"/>
        <property name="comment" column="comment"/>
    </class>
    <class name="GeneratorParameter" table="generator_parameters">
        <id name="id" column="generator_parameter_id">
            <generator class="native"/>
        </id>
        <property name="parameterName" column="parameter_name"/>
        <property name="parameterValue" column="parameter_value"/>
    </class>
    <class name="Passenger" table="passengers">
        <id name="id" column="passenger_id">
            <generator class="native"/>
        </id>
        <property name="name" column="passenger_name"/>
        <property name="tickets" column="passenger_tickets"/>
        <property name="trainID" column="train_id"/>
    </class>
    <class name="Route" table="routes">
        <id name="id" column="route_id">
            <generator class="native"/>
        </id>
        <property name="stationsOnRoute" column="stations_on_route"/>
        <property name="trainsOnRoute" column="trains_on_route"/>
        <property name="isAvailable" column="is_available"/>
    </class>
    <class name="Station" table="stations">
        <id name="id" column="station_id">
            <generator class="native"/>
        </id>
        <property name="name" column="station_name"/>
        <property name="trainsOnStation" column="trains_on_station"/>
        <property name="route" column="route_id"/>
        <property name="timetableForStation" column="timetable_for_station"/>
    </class>
    <class name="Ticket" table="tickets">
        <id name="id" column="ticket_id">
            <generator class="native"/>
        </id>
        <property name="passenger" column="owner"/>
        <property name="price" column="price"/>
    </class>
    <class name="TimetableEntity" table="timetable">
        <id name="id" column="timetable_id">
            <generator class="native"/>
        </id>
        <property name="train" column="train_id"/>
        <property name="station" column="station_name"/>
        <property name="arrivalTime" column="arrival_time"/>
        <property name="departureTime" column="departure_time"/>
    </class>
    <class name="Train" table="trains">
        <id name="id" column="train_id">
            <generator class="native"/>
        </id>
        <property name="route" column="route_id"/>
        <property name="timetable" column="train_timetable"/>
        <property name="passengers" column="train_passengers"/>
        <property name="currentStation" column="station_name"/>
    </class>
</hibernate-mapping>