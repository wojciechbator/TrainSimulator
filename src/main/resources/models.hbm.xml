<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="trainSimulator.models">
    <class name="EventLog">
        <id name="id" column="eventlog_id">
            <generator class="native"/>
        </id>
        <property name="type"/>
        <property name="timestamp"/>
        <property name="stationName" column="station_name"/>
        <property name="comment"/>
    </class>
    <class name="GeneratorParameter">
        <id name="id" column="parameter_id">
            <generator class="native"/>
        </id>
        <property name="parameterName" column="parameter_name"/>
        <property name="parameterValue" column="parameter_value"/>
    </class>
    <class name="Passenger">
        <id name="id" column="passenger_id">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="tickets"/>
        <property name="train"/>
    </class>
    <class name="Route">
        <id name="id" column="route_id">
            <generator class="native"/>
        </id>
        <property name="stationsOnRoute" column="stations_on_route"/>
        <property name="trainsOnRoute" column="trains_on_route"/>
        <property name="available"/>
    </class>
    <class name="Station">
        <id name="id" column="station_id">
            <generator class="native"/>
        </id>
        <property name="name"/>
        <property name="trainsOnStation" column="trains_on_station"/>
        <property name="route"/>
        <property name="timetableForStation" column="timetable_for_station"/>
    </class>
    <class name="Ticket">
        <id name="id" column="ticket_id">
            <generator class="native"/>
        </id>
        <property name="passenger"/>
        <property name="price"/>
    </class>
    <class name="TimetableEntity">
        <id name="id" column="timetable_id">
            <generator class="native"/>
        </id>
        <property name="train"/>
        <property name="station"/>
        <property name="arrivalTime"/>
        <property name="departureTime"/>
    </class>
    <class name="Train">
        <id name="id" column="train_id">
            <generator class="native"/>
        </id>
        <property name="route"/>
        <property name="timetable"/>
        <property name="passengers"/>
        <property name="station"/>
    </class>
</hibernate-mapping>